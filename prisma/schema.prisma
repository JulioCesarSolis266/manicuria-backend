// APPOINTMENTS (Turnos)
model Appointment {
  id             Int        @id @default(autoincrement())

  // Servicio referenciado
  serviceId      Int
  service        Service    @relation(fields: [serviceId], references: [id])

  date           DateTime
  status         String     @default("pending")

  // Cliente
  clientId       Int
  client         Client     @relation(fields: [clientId], references: [id])

  // Usuario que creó el turno (la manicura jefa)
  createdById    Int
  createdBy      User       @relation("AppointmentsCreated", fields: [createdById], references: [id])

  // Empleada que atiende el turno
  employeeId     Int?
  employee       Employee?  @relation("EmployeeAppointments", fields: [employeeId], references: [id])

  createdAt      DateTime   @default(now())
}
