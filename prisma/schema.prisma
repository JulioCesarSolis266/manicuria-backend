generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


// USERS (Manicuras due침as de la app)
model User {
  id                 Int      @id @default(autoincrement())
  name               String
  surname            String
  username           String   @unique
  password           String
  role               String   @default("user")
  forcePasswordReset Boolean  @default(false)
  createdAt          DateTime @default(now())
  isActive           Boolean  @default(true)
  phone              String

  // Relaciones
  appointments        Appointment[]
  employees           Employee[]
  clients             Client[]
  services            Service[]
}


// EMPLOYEES (Empleadas de la manicura)
model Employee {
  id     Int  @id @default(autoincrement())
  userId Int // 游녣 Due침a (manicura)
  user   User @relation(fields: [userId], references: [id])

  name      String
  surname   String
  phone     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  // Relaci칩n con turnos asignados
  appointments Appointment[] @relation("EmployeeAppointments")
}


// CLIENTS (Clientes finales)
model Client {
  id     Int  @id @default(autoincrement())
  userId Int // 游녣 Due침a (manicura)
  user   User @relation(fields: [userId], references: [id])

  name      String
  surname   String
  phone     String
  notes     String?
  createdAt DateTime @default(now())

  appointments Appointment[]
}


// SERVICES (Servicios ofrecidos)
model Service {
  id     Int  @id @default(autoincrement())
  userId Int // 游녣 Due침a (manicura)
  user   User @relation(fields: [userId], references: [id])

  name            String
  price           Float
  durationMinutes Int
  category        String?
  description     String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())

  appointments Appointment[]
}


// APPOINTMENTS (Turnos)
model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  status    String   @default("pending")
  createdAt DateTime @default(now())

  // Due침a del sistema
  userId Int
  user   User @relation(fields: [userId], references: [id])

  // Cliente
  clientId Int
  client   Client @relation(fields: [clientId], references: [id])

  // Servicio
  serviceId Int
  service   Service @relation(fields: [serviceId], references: [id])

  // Empleada que atiende
  employeeId Int?
  employee   Employee? @relation("EmployeeAppointments", fields: [employeeId], references: [id])

  description String?
}

